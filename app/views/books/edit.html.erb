<h1>Editing Book</h1>
<%= form_with model: @book, local:true  do |f| %>

<div class="field">
   <%= f.label :title, 'Title',class: 'label' %>
   <%= f.text_field :title %>
</div>

<div class="field">
   <%= f.label :body, 'Body',class: 'label' %>
   <%= f.text_area :body %>
</div>

<div class="textarea">
   <%= f.submit 'Update Book' %>
</div>
<% end %>

