<p id=notice>
    <%= notice %>
</p>
<h1 class="title">Books</h1>

<table>
    <thead>
        <tr>
            <th>Title</th>
            <th>Body</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        <% @books.each do |book| %>
        <tr>
            <td><%= book.title %></td>
            <td><%= book.body %></td>
            <td><%= link_to "Show", book_path(book) %></td>
            <td><%= link_to "Edit", edit_book_path(book) %></td>
            <td><%= link_to "Destroy", book_path(book), method: :delete, "data-confirm" => "Are you sureï¼Ÿ" %></td>
        </tr>
        <% end %>
    </tbody>
</table>

<h2>New book</h2>
<%= form_with model: @book, url:'/books',  local:true  do |f| %>
<% if @book.errors.any? %>
<div class="alert">
    <h2 class="alert_tit"><%= @book.errors.count %> error prohibited this book from being saved:</h2>
    <ul class="alert_list">
        <% @book.errors.full_messages.each do |message| %>
        <li class="alert_item"><%= message %></li>
        <% end %>
    </ul>
</div>
<% end %>

<div class="field">
    <%= f.label :title, 'Title',class: 'label' %>
    <%= f.text_field :title %>
</div>

<div class="field">
    <%= f.label :body, 'Body',class: 'label' %>
    <%= f.text_area :body %>
</div>

<div class="testarea">
<%= f.submit 'Create Book' %>
</div>


<% end %>